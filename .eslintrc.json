{
      "env": {
            "browser": true,
            "es6": true
      },
      "extends": "eslint:recommended",
      "rules": {
            "semi": [
                  "error",
                  "always"
            ],
            "indent": [
                  "error",
                  2
            ],
            "no-unused-vars": [
                  "warn"
            ],
            "quotes": [
                  "error",
                  "single"
            ],
            "object-curly-spacing": [
                  "error",
                  "always"
            ]
      }
}